
<div class="card my-5 mx-5 mt-5">
  <header class="card-header">
    <p class="card-header-title">
      Sign Up
    </p>
  </header>
  <div class="card-content">
    <div class="content">
      <div class="field py-2">
        <label class="label">Username</label>
          <div class="control">
            <input class="input" type="text" placeholder="Text input" id="name-signup">
          </div>
      </div>
      <div class="field py-2">
          <label class="label">Email</label>
          <div class="control">
            <input class="input" type="text" placeholder="Text input" id="email-signup">
          </div>
      </div>
      <div class="field">
          <label class="label">Password</label>
          <div class="control">
            <input class="input" type="password" placeholder="Text input" id="password-signup">
          </div>
      </div>
      <div class="field is-grouped">
          <div class="control">
            <button class="button is-link" id="signup-button">Sign up!</button>
          </div>
      </div>
      <div>
        <a class="column is-4" href="/login">Login instead</a>
      </div>
    </div>
  </div>
</div>


<script src="./js/signup.js"></script>
